{
  "name": "vsphere provision",
  "description": "Provision servers with VMWare vSphere",
  "class": "MaestroDev::VSphereWorker",
  "dependencies": [
    {
      "name": "rbvmomi",
      "version": "1.5.1",
      "source": "http://rubygems.org/"
    }
  ],
  "task": {
    "command": "/vsphere/provision",
    "icon": "vsphere.png",
    "inputs": {
      "host": {
        "description": "vSphere host",
        "required": true,
        "type": "String",
        "value": "localhost"
      },
      "username": {
        "description": "vSphere username",
        "required": true,
        "type": "String",
        "value": null
      },
      "password": {
        "description": "vSphere password",
        "required": true,
        "type": "Password",
        "value": null
      },
      "template_path": {
        "description": "path of the vm template to use, ie. /Datacenters/DC/MYTEMPLATE",
        "required": true,
        "type": "String",
        "value": null
      },
      "destination_folder": {
        "description": "name of the destination folder for the created vm, uses the template folder by default",
        "required": false,
        "type": "String",
        "value": null
      },
      "datastore": {
        "description": "name of the datastore to use for the vm",
        "required": false,
        "type": "String",
        "value": null
      }
    },
    "outputs": {
      "vsphere_ips": {
        "type": "Array"
      },
      "vsphere_ids": {
        "type": "Array"
      }
    }
  },
  "source_types": [
    {
      "name": "vsphere",
      "options": {
        "host": "String",
        "username": "String",
        "password": "Password",
        "template_path": "String",
        "destination_folder": "String",
        "datastore": "String"
      }
    }
  ]
}