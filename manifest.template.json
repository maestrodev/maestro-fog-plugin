[
  /* ************************************ OpenStack ************************************ */
  {
    "name" : "openstack provision",
    "description" : "Provision servers in an OpenStack cloud.<br>[tenant] the tenant id<br>[username] username<br>[password] password<br>[image_id] id of the image to use (ie. 49 for Ubuntu)<br>[flavor_id] Flavor id that defines ram, cpu,...<br>[name] name of the started vm<br>[number_of_vms] number of instances to start<br>[key_name] name of the public key to copy to the server<br>[security_group] the name of the security group.",
    "license" : "Apache 2.0",
    "author": "Etienne Pelletier",
    "version": "updated at build time",
    "class": "MaestroDev::OpenstackWorker",
    "type":"ruby",
    "dependencies":[
      {
        "name" : "fog",
        "version" : "1.4.0",
        "source" : "http://rubygems.org/"
      }
    ],
    "task":{
      "command" : "/openstack/provision",
      "inputs" :  {
        "username":        {"required":true, "type":"String",  "value":null},
        "api_key":         {"required":true, "type":"Password","value":null},
        "tenant":          {"required":true, "type":"String",  "value":null},
        "auth_url":        {"required":true,"type":"String",  "value":null},
        "image_id":        {"required":true, "type":"String", "value":null},
        "flavor_id":       {"required":true, "type":"String", "value":null},

        "name":            {"required":false,"type":"String",  "value":null},
        "number_of_vms":   {"required":true, "type":"Integer", "value":1},
        "key_name":        {"required":false,"type":"String",  "value":null},
        "security_group":  {"required":false,"type":"String",  "value":null}
      },
      "outputs" : {
        "openstack_private_ips": {"type" : "Array"},
        "openstack_ips": {"type" : "Array"},
        "openstack_ids": {"type" : "Array"}
      },
      "tool_name":"Cloud"
    },
    "source_types": [
      {
        "name" : "openstack",
        "options" : {
          "username": "String",
          "api_key": "Password",
          "tenant": "String",
          "auth_url": "String",
          "image_id": "String",
          "flavor_id": "String",
          "key_name": "String",
          "security_group": "String"
        }
      }]
  },
  {
    "name" : "openstack deprovision",
    "description" : "Deprovision servers in an OpenStack cloud. Deprovisions all servers started in a previous provision tasks.",
