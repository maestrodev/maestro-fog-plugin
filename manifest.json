    "author": "Carlos Sanchez",
    "version": "1.0-SNAPSHOT",
    "class": "MaestroDev::VSphereWorker",
    "type":"ruby",
    "dependencies":[
      {
        "name" : "fog",
        "version" : "1.4.0",
        "source" : "http://rubygems.org/"
      },
      {
        "name" : "rbvmomi",
        "version" : "1.5.1",
        "source" : "http://rubygems.org/"
      }
    ],
    "task":{
      "command" : "/vsphere/deprovision",
      "inputs" :  {
      },
      "outputs" : {},
      "tool_name":"Cloud"
    }
  }
]
